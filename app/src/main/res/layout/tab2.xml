<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/azulito"
    tools:context="ej6.adsw.dit.upm.es.matestdrivedefinitivo.Tab2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:id="@+id/Seccion2"
        android:layout_centerHorizontal="true"
        android:text="@string/seccion2"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA">
            <ImageButton
                android:id="@+id/image_buttonLS"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/ls1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="true"
                android:background="@color/colorPrimary"/>
            <Spinner
                android:id="@+id/spinnerLS"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/image_buttonLS"

                android:layout_alignRight="@+id/image_buttonLV"
                android:layout_alignEnd="@+id/image_buttonLV"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:layout_marginTop="5dp">
            <ImageButton
                android:id="@+id/image_buttonLV"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/ls2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="true"
                android:background="@color/colorPrimary"/>
            <Spinner
                android:id="@+id/spinnerLV"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/image_buttonLV"

                android:layout_alignRight="@+id/image_buttonNGS"
                android:layout_alignEnd="@+id/image_buttonNGS"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:layout_marginTop="5dp">
            <ImageButton
                android:id="@+id/image_buttonNGS"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/ls3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="true"
                android:background="@color/colorPrimary"/>
            <Spinner
                android:id="@+id/spinnerNGS"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/image_buttonNGS"

                android:layout_alignRight="@+id/image_buttonODS"
                android:layout_alignEnd="@+id/image_buttonODS"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:layout_marginTop="5dp">
            <ImageButton
                android:id="@+id/image_buttonODS"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/ls4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="true"
                android:background="@color/colorPrimary"/>
            <Spinner
                android:id="@+id/spinnerODS"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/image_buttonODS"

                android:layout_alignRight="@+id/image_buttonSCM"
                android:layout_alignEnd="@+id/image_buttonSCM"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:layout_marginTop="5dp">
            <ImageButton
                android:id="@+id/image_buttonSCM"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/ls5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="true"
                android:background="@color/colorPrimary"/>
            <Spinner
                android:id="@+id/spinnerSCM"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/image_buttonSCM"

                android:layout_alignRight="@+id/botonSV"
                android:layout_alignEnd="@+id/botonSV"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/señales"
            android:id="@+id/textSeñales"
            android:textAlignment="center"
            android:paddingTop="70dp"/>
    </LinearLayout>
</RelativeLayout>
